{% block delete %}
{% if isAdmin == true and allowPatientDelete == true %}
    <a class="btn btn-block btn-danger text-light deleter delete"
        href="{{ urlWebRoot|attr }}/interface/patient_file/deleter.php?patient={{ pid|attr_url }}&csrf_token_form={{ csrf|attr_url }}"
        onclick='return top.restoreSession()'><i class="fa fa-user-times fa-fw"></i>&nbsp;{{ "Delete Patient"|xlt }}</a>
{% endif %}
{% endblock %}
