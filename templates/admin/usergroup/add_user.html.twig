                      onsubmit='return top.restoreSession()'>
                    <input type='hidden' name='mode' value='new_user'>
                    <input type='hidden' name='secure_pwd' value="{{ global.secure_password }}">
                    {% if global.use_active_directory %}
                        <input type="hidden" value="124" name="stiltskin">
                    {% endif %}
                    <input type="hidden" name="newauthPass">
