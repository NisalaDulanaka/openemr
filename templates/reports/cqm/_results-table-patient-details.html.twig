{#                                </td>#}
{#                                <td colspan="{{ patientDetails.actions|length }}">#}
{#                                        <ul>#}
{#                                            {%  for action in patientDetails.actions %}#}
{#                                                {% if action.details != "" %}#}
{#                                                <li>#}
{#                                                        {{ action.details|text }}#}
{#                                                </li>#}
{#                                                {% endif %}#}
{#                                            {% endfor %}#}
{#                                        </ul>#}
{#                                </td>#}
{#                            </tr>#}
{#                            {% endif %}#}
                        {% endfor %}
                    </tbody>
                </table>
                {% else %}
                    {{ "No patient records found"|xlt }}
                {% endif %}
            </div>
        </div>
    </td>
</tr>