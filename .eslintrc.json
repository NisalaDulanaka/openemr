{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jquery": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": ["error", 4],
        "no-console": "off",
        "no-unused-vars": "off",
        "no-alert":"off",
        "no-undef":"off",
        "no-param-reassign": "off",
        "no-inner-declarations": "off",
        "func-names":"off",
        "prefer-arrow-callback":"off",
        "camelcase":"off",
        "no-extend-native":"off",
        "no-underscore-dangle":"off",
        "no-restricted-syntax":"off",
        "prefer-destructuring":"off",
        "no-continue":"off",
        "new-cap":"off",
        "no-useless-escape":"off",
        "no-shadow":"off",
        "prefer-rest-params":"off",
        "no-loop-func":"off",
        "no-nested-ternary": "off"
    }
}
